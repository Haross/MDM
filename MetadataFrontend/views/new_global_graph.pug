extends layout
block headers
    link(rel='stylesheet', href='/stylesheets/loading.css')
    script(src='/js/client_new_global_graph.js')

block content

    .container-fluid
        .card.bg-secondary.mb-3
            .card-header
                .row
                    .col-md-11
                        h2(style="color:black")
                            | New Global Graph
                    .col-md-1
                        button.btn.btn-link(data-toggle="collapse" data-target="#instructions")#instructionsButton
                            i.fas.fa-chevron-circle-down.fa-3x(style="color:black")
            #instructions.collapse(aria-labelledby="headingOne" data-parent="#accordion")
                .card-body
                    p.card-text(style='text-align: left')
                        | bla bla bla

        .card.bg-secondary.mb-3
                        form#globalGraphForm
                            .form-group#nameForm
                                label.col-lg-4.col-form-label Name
                                .col-lg-12
                                    input#name.form-control(type='text', name='name', required='required')

                            .form-group#defaultNamespaceForm
                                label.col-lg-4.col-form-label Default namespace
                                .col-lg-12
                                    input#defaultNamespace.form-control(type='text', name='defaultNamespace', required='required')

                            .form-group
                                .col-lg-12.col-lg-offset-2
                                    button#submitGlobalGraph.btn.btn-primary.btn-lg.btn-block(type="submit") Submit